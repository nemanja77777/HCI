<Window
    x:Class="ProjekatA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login Page"
    Width="400"
    Height="330"
    AllowDrop="True"
    Background="{DynamicResource Pozadina1Brush}"
    KeyDown="Window_KeyDown"
    MouseDown="TopPanel_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Grid>
        <Grid
            Name="TopPanel"
            Height="40"
            VerticalAlignment="Top"
            Background="{DynamicResource Pozadina2Brush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="{DynamicResource TekstBrush}"
                Text="{DynamicResource Title}" />

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="30"
                    Height="30"
                    Background="{DynamicResource Pozadina1Brush}"
                    BorderBrush="Transparent"
                    Click="MinimizeButton_Click"
                    Content="_"
                    Foreground="{DynamicResource TekstBrush}" />
                <Button
                    Width="30"
                    Height="30"
                    Background="{DynamicResource Pozadina1Brush}"
                    BorderBrush="Transparent"
                    Click="MaximizeButton_Click"
                    Content="□"
                    Foreground="{DynamicResource TekstBrush}" />
                <Button
                    Width="30"
                    Height="30"
                    Background="{DynamicResource Pozadina1Brush}"
                    BorderBrush="Transparent"
                    Click="CloseButton_Click"
                    Content="X"
                    Foreground="{DynamicResource TekstBrush}" />
            </StackPanel>
        </Grid>

        <Border
            Width="380"
            Height="240"
            Margin="10,50,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource Pozadina2Brush}"
            BorderBrush="{DynamicResource RuboviBrush}"
            BorderThickness="2"
            CornerRadius="10">
            <StackPanel
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel
                    Width="360"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        Width="140"
                        Height="40"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        Content="{DynamicResource Username}"
                        FontSize="20"
                        Foreground="{DynamicResource TekstBrush}" />
                    <TextBox
                        Name="UsernameTextBox"
                        Width="210"
                        Height="40"
                        Margin="10,10,0,10"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Background="{DynamicResource Pozadina1Brush}"
                        BorderBrush="{DynamicResource RuboviBrush}"
                        BorderThickness="2"
                        FontSize="20"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource TekstBrush}"
                        KeyDown="txtUsername_KeyDown"
                        KeyboardNavigation.TabNavigation="Continue"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Password Label and PasswordBox  -->
                <StackPanel
                    Width="360"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        Width="140"
                        Height="40"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        Content="{DynamicResource Password}"
                        FontSize="20"
                        Foreground="{DynamicResource TekstBrush}" />
                    <PasswordBox
                        Name="PasswordBox"
                        Width="210"
                        Height="40"
                        Margin="10,10,0,10"
                        VerticalContentAlignment="Center"
                        Background="{DynamicResource Pozadina1Brush}"
                        BorderBrush="{DynamicResource RuboviBrush}"
                        BorderThickness="2"
                        FontSize="20"
                        Foreground="Black"
                        KeyboardNavigation.TabNavigation="Continue"
                        PasswordChanged="PasswordBox_PasswordChanged" />
                </StackPanel>

                <Button
                    Name="LoginButton"
                    Width="360"
                    Height="40"
                    Margin="10,10,10,0"
                    Background="{DynamicResource RuboviBrush}"
                    BorderBrush="{DynamicResource RuboviBrush}"
                    BorderThickness="1"
                    Click="LoginButton_Click"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Content="{DynamicResource Login}"
                    FontSize="20"
                    Foreground="{DynamicResource TekstBrush}"
                    IsDefault="True" />

                <Grid
                    Margin="0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <RadioButton
                            Name="EnglishRadio"
                            Margin="10,0,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="{DynamicResource Pozadina1Brush}"
                            Checked="LanguageChanged"
                            Content="English"
                            FontSize="16"
                            Foreground="{DynamicResource TekstBrush}"
                            GroupName="Language" />
                        <RadioButton
                            Name="SerbianRadio"
                            Margin="10,0,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="{DynamicResource Pozadina1Brush}"
                            Checked="LanguageChanged"
                            Content="Srpski"
                            FontSize="16"
                            Foreground="{DynamicResource TekstBrush}"
                            GroupName="Language" />
                    </StackPanel>

                    <Button
                        Name="ThemeButton"
                        Grid.Column="1"
                        Width="auto"
                        Height="auto"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="{DynamicResource Pozadina2Brush}"
                        BorderBrush="Transparent"
                        Click="ThemeButton_Click"
                        Content="{DynamicResource Theme}"
                        FontSize="16"
                        Foreground="{DynamicResource TekstBrush}" />
                </Grid>



            </StackPanel>
        </Border>

    </Grid>
</Window>
