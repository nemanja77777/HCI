<Window
    x:Class="ProjekatA.messages.MyDeleteWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Logging Warning"
    Width="400"
    Height="250"
    Background="{DynamicResource Pozadina1Brush}"
    Foreground="{DynamicResource TekstBrush}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Grid>
        <Border
            Padding="10"
            Background="{DynamicResource Pozadina2Brush}"
            BorderBrush="{DynamicResource RuboviBrush}"
            BorderThickness="1"
            CornerRadius="10">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{DynamicResource DeleteWarning}" />
                <Button
                    Width="150"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource Pozadina2Brush}"
                    BorderBrush="{DynamicResource RuboviBrush}"
                    BorderThickness="2"
                    Click="CloseWindow"
                    Content="OK"
                    Foreground="{DynamicResource TekstBrush}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>